.search-clubs-intro
  .ui.one.column.center.aligned.grid
    .ten.wide.column
      .clubsearch
        .clubsearch__container
          %p.clubsearch__container__text
            Clubs by
          %ul.clubsearch__container__list
            %li.clubsearch__container__list__item postcode
            %li.clubsearch__container__list__item suburb
            %li.clubsearch__container__list__item sport
            %li.clubsearch__container__list__item name
      .ui.icon.input.postcode-search
        %input.prompt{:autocomplete => "off", :placeholder => "Enter ...", :type => "text"}/
        %i.search.icon

