.online-course-wrapper
  .online-courses.ui.container
    .ui.centered.grid.search-course-container
      %section#search-form.section-search.eight.wide.computer.sixteen.wide.mobile.column
        .shell
          .section-inner
            .search-content
              .search-label
                Find your course
              %form.search-box
                .ui.category.search.focus.sportaide_search.fluid
                  .ui.icon.input.fluid
                    %input.prompt.filtr-search{:autocomplete => "off", :placeholder => "You can type integrity, child protection...", :type => "text", :name => "search", "data-search" => true, :required => true}/
                    %i.search.icon
    .filtr-container.ui.stackable.grid
      - @courses.each do |course|
        .filtr-item.course-item.four.wide.column{"data-category" => "1", "data-filter" => course.name}
          = image_tag asset_path(course.course_img.url), class: "img-responsive"
          %span.course-name
            = course.name
          .course-caption
            %h2
              =link_to course.name, "/dashboard/lessons/#{course.id}"
            %p= course.overview

.news-feed.ui.container
